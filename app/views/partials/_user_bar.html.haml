#userBar
  #loggedIn
    = link_to 'Edit profile', edit_user_path(:current)
    \|
    = link_to 'Logout', logout_path
    %br
    Logged in as User
    %span{ :id => 'userBarUserId' }
  #loggedOut
    = link_to 'Login', login_path
    \|
    = link_to 'Sign up', signup_path

  :javascript
    if (document.cookie.indexOf('user_id') > -1) {
      var user_id = /user_id=(\d+)/.exec(document.cookie)[1];
      $('userBarUserId').update(user_id);
      $('loggedOut').hide();
      $('loggedIn').show();
    } else {
      $('loggedOut').show();
      $('loggedIn').hide();
    }

