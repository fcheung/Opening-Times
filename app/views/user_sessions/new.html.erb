<h1>Login</h1>

<p>Please login or <%= link_to 'sign up as a new user', signup_path %>.</p>

<% form_for(@user_session) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.submit 'Login', :disable_with => "Please wait...", :class => "button tick" %>
  </p>
<% end %>

