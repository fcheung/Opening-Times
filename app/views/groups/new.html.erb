<h1>New group</h1>

<%= error_messages_for :group %>

<% form_for(@group) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description, :rows => 5 %>
  </p>

  <p>
    <%= f.submit "Create", :class => "button tick" %>
  </p>
<% end %>


