- @page_title = @facility.full_name
- @page_desc = "Opening times and map for #{@facility.full_name}, #{@facility.address}"

%h1= h @facility.full_name

%table.layout
  %tr
    %td{ :style=>"padding-right: 8px; border-right: 1px solid #ddd;" }

      %p{ :class => @status.downcase }
        =h @facility.name
        is currently
        %strong
          = @status.downcase

      - if @facility.description
        = simple_format(@facility.description)

      %h2 Normal opening times
      %table.openingTimes
        %colgroup
          %col.day
          %col.time
          %col.dash
          %col.time
          %col.comment
        %tr
          %th
          %th{ :scope=>'col' } Opens
          %th
          %th{ :scope=>'col' } Closes
          %th
        = normal_openings_rows(@facility.normal_openings, Time.now.wday)

      %br
      %h2 Map
      %span
        %small You can drag the map around to see other nearby facilties
      = render 'facilities/map_show'

    %td{ :style=>'padding-left: 8px;' }
      .advertBox

      %h2 Address
      %address
        = comma_to_br(h(@facility.full_address))
      - unless (@facility.phone || @facility.email || @facility.url).blank?
        %ul.noBullet
          - unless @facility.phone.blank?
            %li= 'Tel:&nbsp;' + @facility.phone
          - unless @facility.email.blank?
            %li= 'Email:&nbsp;' + mail_to(@facility.email)
          - unless @facility.url.blank?
            %li= link_to("More information on #{h(@facility.full_name)}", @facility.url)

      %h2 Nearest facilities
      %ol
        - @nearby[0...5].each_with_index do |nearby,index|
          %li= link_to h(nearby.full_name), facility_slug_path(nearby.slug)

      %h2 Groups
      %ul
        %li Woo

      #infoBox
        %ul
          %li
            ID
            = @facility.id
          %li
            Updated at
            %span{ :facility=> @facility.updated_at }= @facility.updated_at.strftime("%a %d %b %Y")
          %li
            Updated by
            = link_to @facility.updated_by, user_path(@facility.updated_by)
          %li
            = link_to 'Edit', edit_facility_path(@facility.id)
          %li
            = link_to "Revision #{@facility.revision}", facility_revisions_path(@facility.id)
