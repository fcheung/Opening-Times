%tr.holidayopening
  %td
    = f.check_box :closed?, :class => 'closed_checkbox'
    = f.label :closed?, 'Closed'
  %td= f.text_field :opens_at, :size => 5, :maxlength => 7, :class => (f.object[:closed] ? 'disabled' : '')
  %td= f.text_field :closes_at, :size => 5, :maxlength => 7, :class => (f.object[:closed] ? 'disabled' : '')
  %td= f.text_field :comment
  %td.action
    = remove_link_unless_new_record(f)

