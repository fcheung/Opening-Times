%h1= @page_title = "Search"

= form_tag('/search', :name=>'f', :method => :get)
%table.inputFormTable
  %tr
    %td= label_tag 'location'
    %td= text_field_tag 'location', params[:location]
    %td.hint i.e. Town, postcode, latitude longitude
  %tr
    %td= label_tag 'name', 'Business name'
    %td= text_field_tag 'name', params[:name]
  %tr
    %td
    %td= submit_tag 'Search', :name => nil, :class=>'button'

